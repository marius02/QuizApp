<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/quizImage"
        android:src="@drawable/history"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp"/>

    <TextView
        android:id="@+id/quizTopicText"
        android:text="Topic"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/quizDescriptionText"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a containing Lorem Ipsum passages, and more recently with desktop publishing softm Ipsum."
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:id="@+id/startQuizButton"
            android:text="Start Quiz"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/roundbutton"
            android:layout_width="200dp"
            android:layout_height="40dp"/>
    </RelativeLayout>

</LinearLayout>
